#include "stdafx.h"
#include <iostream>
#include "conio.h"
using namespace std;

void main()
{int N, i, s=0;
do{
     cout<< " Ingresar N: " ;
     cin>> N;
}while (N<=0);
for(i=1;i<N;i=i+4)

	 s=s+i;

cout<<"la suma es: "<<s;
getch();
}
